body {
    font-family: 'Comic Sans MS', cursive, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #fff0f5;
    color: #333;
    text-align: center;
}

header {
    background-color: #ff69b4;
    color: white;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 1000;
}

header h1 {
    margin: 0;
    font-size: 2.5em;
}

nav ul {
    list-style-type: none;
    padding: 0;
}

nav ul li {
    display: inline;
    margin: 0 15px;
}

nav ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.2em;
}

nav ul li a:hover {
    text-decoration: underline;
}

main {
    padding: 20px;
}

.intro {
    background-color: #fff;
    padding: 20px;
    margin: 20px auto;
    border-radius: 15px;
    max-width: 800px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.intro img {
    max-width: 100%;
    height: auto;
    border-radius: 15px;
}

.intro p {
    font-size: 1.2em;
    margin-top: 20px;
}

footer {
    background-color: #ff69b4;
    color: white;
    padding: 10px;
    box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.1);
    position: sticky;
    bottom: 0;
    width: 100%;
}

footer p {
    margin: 0;
}

.creatures {
    margin-top: 20px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 10px;
}

.creatures span {
    background-color: #ff69b4;
    color: white;
    padding: 10px 20px;
    border-radius: 20px;
    font-size: 1em;
}

.about, .productos{
	width: 75%;
    margin: auto;	
	height: 500px;
}


.carousel-slide{
	width: 50%;
    margin: auto;	
}